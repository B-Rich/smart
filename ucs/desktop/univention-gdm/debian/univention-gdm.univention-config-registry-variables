[univentionAutoStartScript]
Description[de]=Aktiviere automatischen Login
Description[en]=Enable automatic login
Type=bool
Categories=system-desktop

[gdm/autostart/user]
Description[de]=Der angegebene Benutzer wird für den automatischen Login verwendet. (default: autostart)
Description[en]=The given user will be used for automatic login (default: autostart)
Type=str
Categories=system-desktop

[gdm/autostart/permitteduser]
Description[de]=Benutzer, welche berechtigt sind, einen XServer zu starten - mögliche Werte: "rootonly", "console" or "anybody"
Description[en]=Users who are allowed to start a xserver - possible values: "rootonly", "console", "anybody"
Type=str
Categories=system-desktop
