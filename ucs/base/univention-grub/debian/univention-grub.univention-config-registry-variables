[grub/timeout]
Description[de]=Wartezeit in Sekunden bevor der Standardkernel gebootet wird
Description[en]=Timeout in seconds, before automatically booting the default entry
Type=str
Categories=system-base

[grub/gfxmode]
Description[de]=Die Bildschirmauflösung für das Bootmenu, z.B. 1024x768
Description[en]=Graphical resolution for the boot menu text, e.g. 1024x768
Type=str
Categories=system-base

[grub/xenhopt]
Description[de]=Diese Optionen werden an den Xen-Hypervisor weitergegeben, , z.B.. dom0_mem=1024M
Description[en]=These options are passed to the Xen hypervisor, e.g. dom0_mem=1024M
Type=str
Categories=system-base

[grub/append]
Description[de]=Zu übergebende Optionen für den Linux-Kernel
Description[en]=Options to be passed to the Linux kernel
Type=str
Categories=system-base

[grub/quiet]
Description[de]=Kernel-Option, um die meisten Meldungen während des Systemstarts zu unterdrücken
Description[en]=Kernel option to suppress most messages during startup
Type=str
Categories=system-base

[grub/loglevel]
Description[de]=Alle Kernelmeldungen mit einem Loglevel kleiner als der hier angegebene werden auf der Konsole ausgegeben (0 fuer Notfallmeldungen bis 7 fuer Debugmeldungen).
Description[en]=All kernel messages with a loglevel smaller than the loglevel will be printed to the console (ranging from 0 for emergency messages to 7 for debugging).
Type=str
Categories=system-base

[grub/bootsplash]
Description[de]=Definiert, ob ein Bootsplash angezeigt werden soll (splash) oder nicht (leer oder nosplash).
Description[en]=Defines whether to display a bootplash (splash) or not (empty or nosplash).
Type=str
Categories=system-base

[grub/backgroundimage]
Description[de]=Definiert das Hintergrundbild für den Bootmanager grub.
Description[en]=Defines the background image for the bootmanager grub.
Type=str
Categories=system-base

[grub/color/normal]
Description[de]=Farben für den "normalen" Vorder-und Hintergrund im grub Terminal.
Description[en]=This variable contains the "normal" foreground and background grub terminal colors.
Type=str
Categories=system-base

[grub/color/highlight]
Description[de]=Farben für den hervorgehobenen Vorder-und Hintergrund im grub Terminal.
Description[en]=This variable contains the "highlight" foreground and background grub terminal colors.
Type=str
Categories=system-base

[grub/menu/color/normal]
Description[de]=Farben für den "normalen" Vorder-und Hintergrund eines nicht markierten grub Menüeintrag.
Description[en]=This variable contains the foreground and background colors to be used for non-highlighted grub menu entries.
Type=str
Categories=system-base

[grub/menu/color/highlight]
Description[de]=Farben für den Vorder-und Hintergrund eines markierten grub Menüeintrag.
Description[en]=This variable contains the foreground and background colors to be used for the highlighted grub menu entry.
Type=str
Categories=system-base

[grub/vga]
Description[de]=Grub VGA-Code
Description[en]=Grub vga code
Type=str
Categories=system-base

[grub/generate-menu-lst]
Description[de]=Wenn diese Option aktiviert ist, wird zusätzlich eine /boot/grub/menu.lst im Format von Grub 1 generiert
Description[en]=If this option is activated, an additional /boot/grub/menu.lst is generated in Grub 1 format
Type=str
Categories=system-base

[grub/grub1root]
Description[de]=Der hier übergebene Wert wird für die root-Partition in der generierten Grub1-Konfiguration verwendet
Description[en]=This value is used for the root partition in the generated Grub1 configuration
Type=str
Categories=system-base
