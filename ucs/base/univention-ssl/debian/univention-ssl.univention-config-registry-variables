[ssl/common]
Description[de]=Common name für das Root SSL-Zertifikat
Description[en]=Common name for the root SSL certificate
Type=str
Categories=system-ssl

[ssl/country]
Description[de]=In SSL-Zertifikaten verwendeter ISO-Ländercode (zwei Buchstaben)
Description[en]=Two letter country code to use in SSL certificates
Type=str
Categories=system-ssl

[ssl/email]
Description[de]=In SSL-Zertifikaten verwendete Email-Adresse
Description[en]=E-mail address to use in SSL certificates
Type=str
Categories=system-ssl

[ssl/state]
