Categories=system-ssl

[ssl/default/hashfunction]
Description[de]=Standard Hashfunktion für neue SSL-Zertifikate
Description[en]=Default hash function for new SSL certificates
Type=str
Categories=system-ssl

[ssl/validity/check]
Description[de]=Aktiviere/Deaktiviere die regelmäßige Gültigkeitsprüfung für Zertifikate
Description[en]=Enable/Disable regular checks for certificate validity
Type=bool
Categories=system-ssl

[ssl/validity/host]
Description[de]=Anzahl der Tage von der Unixzeit (1970-01-01T00:00:00Z ISO 8601) bis zum Ablauf des Rechner-Zertifikat (automatisch generiert).
Description[en]=Number of days from the unix epoch (1970-01-01T00:00:00Z ISO 8601) to the expiry of the host certificate (auto generated).
Type=int
Categories=system-ssl

[ssl/validity/root]
Description[de]=Anzahl der Tage von der Unixzeit (1970-01-01T00:00:00Z ISO 8601) bis zum Ablauf des Root-Zertifikat (automatisch generiert).
Description[en]=Number of days from the unix epoch (1970-01-01T00:00:00Z ISO 8601) to the expiry of the root certificate (auto generated).
Type=int
Categories=system-ssl

[ssl/validity/warning]
Description[de]=Warnmeldungen ausgeben wenn die Gültigkeit des Root-Zertifikats die angegebenen Tage unterschreitet
Description[en]=Print warnings if the root certificates validity ends within this amount of days
Type=str
Categories=system-ssl

[ssl/host/extensions]
Description[de]=Definiert eine Shell-Scriptd für die Erstellung einer Datei mit Zertifikats-Erweiterungen
Description[en]=Defines a shell script for the creation of a certificate extensions file
Type=str
Categories=system-ssl
