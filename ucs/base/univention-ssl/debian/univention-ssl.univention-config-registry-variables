Categories=system-ssl

[ssl/locality]
Description[de]=In SSL-Zertifikaten verwendeter Ort
Description[en]=Locality used in SSL certificates
Type=str
Categories=system-ssl

[ssl/organization]
Description[de]=In SSL-Zertifikaten verwendete Organisation/Firma
